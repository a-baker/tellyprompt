mixin episode(ep)
    a(href="/chat/" + ep.showID + "/" + ep.season + "/" + ep.episode).chatLink
        div.row.ep-row
                div.still-col
                    if ep.still !== "/img/nostill.jpg"
                        img.ep-still(src="#{ep.still}")
                div.col-sm-12.desc-col
                    p.ep-desc= ep.show + " S" + ep.season + "E" + ep.episode + ": " + ep.title

- nextPage = Number(data.page) + 1; prevPage = Number(data.page) - 1;

h1.sectionHead
    i.fa.fa-heart
    span Favourites
div.favouritesWrapper
    each ep in data.episodes
        +episode(ep)
div.pageButtons
    div.row
        div.col-xs-4
            a.btn.btn-lg.btn-pages.btn-prev(href="/favourites/#{prevPage}")
                i.fa.fa-chevron-left
        div.col-xs-4
            p.page-num Page: #{data.page}
        div.col-xs-4
            a.btn.btn-lg.btn-pages.btn-next(href="/favourites/#{nextPage}")
                i.fa.fa-chevron-right

script(type="text/javascript").
    var page = #{data.page}, pages = #{data.pages};